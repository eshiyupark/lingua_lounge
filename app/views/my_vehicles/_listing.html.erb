<div class="card_edit w-100">
  <div>
    <%= image_tag "Nissan_SUV.jpg", alt: "Le Wagon", width: 200, class:"car_image"%>
  </div>
  <div  class="card_details">
    <div>
      <h4><strong><%= vehicle.make %> <%= vehicle.model %> - <%= vehicle.year %> </strong></h4>
      <p>Capacity: <%= vehicle.number_of_passengers %></p>
      <p><%= vehicle.transmission.capitalize %></p>
      <%= link_to "Details", vehicle_path(vehicle), class: "btn" %>
    </div>
    <div class="cost">
      <p><em>price per day</em></p>
      <h5>$<%= vehicle.price_per_day %></h5>
    </div>
  </div>
</div>
