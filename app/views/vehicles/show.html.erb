<div class="container d-flex flex-column align-items-center p-2 border rounded">
  <div class="show-vehicle-photo w-75 d-flex align-items-center     justify-content-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://media.autoexpress.co.uk/image/private/s--aruyu9pf--/f_auto,t_primary-image-desktop@1/v1575316843/autoexpress/2019/11/vauxhall_astra_new_interior.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://media.istockphoto.com/id/509100198/photo/car-interior.jpg?s=612x612&w=0&k=20&c=mmLwTtn8PyyvQdl5HgTtOX3VUJM-w1hou9s3oAfR_vM=" alt="Second slide">
        </div>
       <div class="carousel-item">
          <img class="d-block w-100" src="https://media.istockphoto.com/id/1240347235/photo/empty-roomy-open-trunk-of-modern-crossover-car-copy-space-rear-view-of-a-car-with-an-open.jpg?s=612x612&w=0&k=20&c=_P3b136NS1WUyD9IxDGmSu8dbycaqYt7DFWC0F8XBCE=" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <!--vehicle details-->
   <div class="empty"></div>
  <div class="d-flex align-items-center justify-content-center w-75">
    <h3><%= @vehicle.year %> <%= @vehicle.make %> <%= @vehicle.model %></h3>
  </div>
  <div class="w-75">
    <div class="top-line">
      <p class="font-weight-bold d-inline">Price per day:</p>
      <p>$<%= @vehicle.price_per_day %></p>
      <p class="font-weight-bold d-inline">Capacity:</p>
      <p><%= @vehicle.number_of_passengers %></p>
      <p class="font-weight-bold d-inline">Transmission:</p>
      <p><%= @vehicle.transmission.capitalize %></p>
    </div>
    <p class="font-weight-bold d-inline">Location:</p>
    <p><%= @vehicle.location %></p>
    <p><%= @vehicle.description %></p>
  </div>

  <div class="btns-div">
    <div>
      <%= link_to "Make a Booking",new_vehicle_booking_path(@vehicle) ,class:"back-btn"%>
    </div>
    <div>
      <% if policy(@vehicle).edit? %>
        <%= link_to  edit_vehicle_path do%>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
      <% end %>
    </div>
    <div>
      <% if policy(@vehicle).destroy? %>
        <%= link_to vehicle_path(@vehicle),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do
        %>
        <i class="fa-solid fa-trash"></i>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= link_to "Back", vehicles_path, class:"back-btn"%>
    </div>
  </div>
</div>
