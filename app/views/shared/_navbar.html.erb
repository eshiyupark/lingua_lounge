<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex justify-content-between">

    <div class="left d-flex align-items-center justify-content-start ps-4">
      <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "white-car.svg", class: "car" %>
      <% end %>
    </div>

    <div class="middle">
      <%= image_tag "name-logo-white.png", class: "logoname" %>
    </div>

    <div class="right d-flex align-items-center justify-content-end pe-4">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Browse vehicles", vehicles_path, class: "nav-link text-white" %>
          </li>
          <% if current_user  %>
            <li class="nav-link">
              <p><%= current_user.first_name %> <%= current_user.last_name %></p>
            </li>
          <% end %>
          <li class="nav-item dropdown">
            <%= image_tag "user-icon.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

              <%= link_to "Home", root_path, class: "dropdown-item"%>

              <%= link_to "Notifications", "#", class: "dropdown-item" %>
              <%= link_to "Account Settings", "#", class: "dropdown-item" %>
              <% if current_user  %>
                <%= link_to "My Bookings", bookings_path, class: "dropdown-item"%>
                <%= link_to "My Vehicles", my_vehicles_path, class: "dropdown-item"%>
                <%= link_to "Booking Requests", my_bookings_path, class: "dropdown-item"%>
                <%= link_to "Sign out", destroy_user_session_path, class: "dropdown-item"%>
              <% else  %>
                <%= link_to "Sign in", new_user_session_path, class: "dropdown-item" %>
                <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
